---
interface Props {
	title: string;
	lang?: 'jv' | 'aksara';
}

const { title, lang = 'jv' } = Astro.props;
const isAksara = lang === 'aksara';
---

<!doctype html>
<html lang={isAksara ? 'jv-Java' : 'jv'} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Product Showcase" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <!-- Google Fonts: Inter (Body), Playfair Display (Headings), and Noto Sans Javanese (Script) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Noto+Sans+Javanese:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
		<title>{title}</title>
        <script is:inline>
            // Theme toggle logic
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark')
            } else {
                document.documentElement.classList.remove('dark')
            }
        </script>
	</head>
	<body class:list={[
		"bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-300",
		isAksara ? "font-javanese" : "font-sans"
	]}>
		<slot />
	</body>
</html>

<style is:global>
    :root {
        --font-body: 'Inter', sans-serif;
        --font-heading: 'Playfair Display', serif;
        --font-javanese: 'Noto Sans Javanese', sans-serif;
    }
    html {
        font-family: var(--font-body);
    }
    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
    }
    .font-javanese {
        font-family: var(--font-javanese);
    }
    .font-javanese h1,
    .font-javanese h2,
    .font-javanese h3,
    .font-javanese h4,
    .font-javanese h5,
    .font-javanese h6 {
        font-family: var(--font-javanese);
    }
</style>
