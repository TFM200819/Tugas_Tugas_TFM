---
interface Props {
    title?: string;
}

const { title = "Credits" } = Astro.props;

const credits = [
    { id: 11, name: "Alex Designer", role: "UX/UI Lead" },
    { id: 2, name: "Jordan Dev", role: "Frontend" },
    { id: 3, name: "Casey Smith", role: "Backend" },
    { id: 4, name: "Taylor White", role: "Product Owner" },
    { id: 5, name: "Morgan Lee", role: "Marketing" },
    { id: 6, name: "Riley Brown", role: "QA Engineer" },
];
---

<section class="py-20 px-6 bg-gray-50 dark:bg-gray-800/50">
    <h3 class="text-center text-3xl font-bold mb-12">{title}</h3>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {credits.map((person) => (
            <div class="border-2 border-gray-900 dark:border-white p-6 rounded-lg hover:-translate-y-1 transition-transform duration-300 bg-white dark:bg-gray-900 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] dark:shadow-[4px_4px_0px_0px_rgba(255,255,255,1)]">
                <div class="flex items-center gap-4">
                    <span class="text-4xl font-bold font-mono text-gray-300 dark:text-gray-600">{person.id}</span>
                    <div>
                        <h4 class="text-xl font-bold">{person.name}</h4>
                        <p class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider">{person.role}</p>
                    </div>
                </div>
            </div>
        ))}
    </div>
</section>