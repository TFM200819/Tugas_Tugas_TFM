---
import '../styles/global.css'; // <--- ADD THIS LINE
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="jv" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Heritage Showcase" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Load Noto Sans Javanese for Aksara Jawa support -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Javanese:wght@400;700&display=swap" rel="stylesheet">
		
		<title>{title}</title>
	</head>
	<body class="bg-heritage-50 text-heritage-900 dark:bg-heritage-900 dark:text-heritage-50 transition-colors duration-300 font-javanese">
		<slot />
		
		<script>
			// --- Logic for Language and Dark Mode ---
			
			// 1. Dark Mode Toggle
			const themeToggle = document.getElementById('theme-toggle');
			const htmlElement = document.documentElement;

			if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
				htmlElement.classList.add('dark');
			}

			themeToggle?.addEventListener('click', () => {
				htmlElement.classList.toggle('dark');
				localStorage.setItem('theme', htmlElement.classList.contains('dark') ? 'dark' : 'light');
			});

			// 2. Language Toggle (Latin <-> Aksara)
			const langToggle = document.getElementById('lang-toggle');
			let isAksara = false;

			langToggle?.addEventListener('click', () => {
				isAksara = !isAksara;
				document.body.classList.toggle('mode-aksara');
				
				// Update toggle button text
				const span = langToggle.querySelector('span');
				if(span) span.textContent = isAksara ? 'Latin' : 'ꦲꦏ꧀ꦱꦫ'; // "Aksara" in script
			});
		</script>

		<style is:global>
			/* Simple utility to hide/show based on body class */
			body.mode-aksara .text-latin { display: none; }
			body.mode-aksara .text-aksara { display: inline; }
			
			body:not(.mode-aksara) .text-latin { display: inline; }
			body:not(.mode-aksara) .text-aksara { display: none; }
		</style>
	</body>
</html>
