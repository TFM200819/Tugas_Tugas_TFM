---
interface Props {
	title: string;
	lang?: string;
}

const { title, lang = 'jv' } = Astro.props;
const isAksara = lang === 'aksara';
---

<!doctype html>
<html lang={isAksara ? 'jv-Java' : 'jv'} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Product Showcase" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <!-- Google Fonts: Inter (Body) and Playfair Display (Headings) for jv locale -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
        <!-- Google Fonts: Noto Sans Javanese for aksara locale -->
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Javanese&display=swap" rel="stylesheet">
		<title>{title}</title>
        <script is:inline>
            // Theme toggle logic
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark')
            } else {
                document.documentElement.classList.remove('dark')
            }
        </script>
	</head>
	<body class={`bg-white dark:bg-gray-900 text-gray-900 dark:text-white transition-colors duration-300 ${isAksara ? 'font-aksara' : 'font-sans'}`}>
		<slot />
	</body>
</html>

<style is:global>
    :root {
        --font-body: 'Inter', sans-serif;
        --font-heading: 'Playfair Display', serif;
        --font-aksara: 'Noto Sans Javanese', sans-serif;
    }
    html {
        font-family: var(--font-body);
    }
    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
    }
    .font-aksara, .font-aksara h1, .font-aksara h2, .font-aksara h3, .font-aksara h4, .font-aksara h5, .font-aksara h6 {
        font-family: var(--font-aksara);
    }
</style>
