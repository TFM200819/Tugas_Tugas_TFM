---
interface Props {
    title?: string;
    paragraph1?: string;
    paragraph2?: string;
    features?: string[];
    imagePlaceholder?: string;
}

const { 
    title = "Precision Engineering",
    paragraph1 = "Our product is crafted with meticulous attention to detail. Every curve and line is designed to enhance usability and aesthetic appeal.",
    paragraph2 = "We believe in minimalism without compromise. The interface is intuitive, allowing you to focus on what truly mattersâ€”your work.",
    features = ["Feature highlight one", "Advanced integration capabilities", "Real-time data processing"],
    imagePlaceholder = "Product Image Placeholder"
} = Astro.props;
---

<section class="py-24 px-6 md:px-12 max-w-7xl mx-auto">
    <div class="grid md:grid-cols-2 gap-12 items-center">
        
        <!-- Text Content (Left Side) -->
        <div class="space-y-8">
            <h2 class="text-4xl md:text-5xl font-bold">{title}</h2>
            
            <div class="space-y-4 text-lg text-gray-700 dark:text-gray-300">
                <p>
                    {paragraph1}
                </p>
                <p>
                    {paragraph2}
                </p>
                <hr class="border-gray-300 dark:border-gray-700 w-1/3 my-6" />
                <ul class="space-y-2 list-disc list-inside">
                    {features.map((feature) => (
                        <li>{feature}</li>
                    ))}
                </ul>
            </div>
        </div>

        <!-- Product Image Placeholder (Right Side) -->
        <div class="relative aspect-[4/5] bg-gray-200 dark:bg-gray-800 rounded-2xl border-4 border-gray-900 dark:border-white shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-500 flex items-center justify-center">
            <span class="text-gray-400 dark:text-gray-600 text-xl font-mono">{imagePlaceholder}</span>
        </div>

    </div>
</section>