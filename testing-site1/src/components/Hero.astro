---
interface Props {
    title?: string;
    subtitle?: string;
}

const { 
    title = "The Future of Innovation", 
    subtitle = "Experience the next generation of product design. Seamless, powerful, and built for you." 
} = Astro.props;
---

<section class="relative h-screen flex flex-col items-center justify-center text-center overflow-hidden px-4">
    <!-- Blurred Background Effect -->
    <div class="absolute inset-0 -z-10 bg-gradient-to-tr from-blue-200 to-purple-200 dark:from-blue-900 dark:to-purple-900 opacity-50 blur-[100px]"></div>

    <div class="space-y-6 max-w-3xl mx-auto">
        <h1 class="text-6xl md:text-8xl font-bold tracking-tight leading-tight">
            {title}
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-xl mx-auto">
            {subtitle}
        </p>
        
        <!-- Placeholder lines from sketch -->
        <div class="pt-8 flex flex-col gap-4 items-center w-full">
            <div class="h-1 w-32 bg-gray-900 dark:bg-white rounded-full"></div>
            <div class="h-1 w-48 bg-gray-900 dark:bg-white rounded-full opacity-75"></div>
            <div class="h-1 w-24 bg-gray-900 dark:bg-white rounded-full opacity-50"></div>
        </div>
    </div>
</section>